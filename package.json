{
    "name": "game-server",
    "version": "1.0.0",
    "description": "Simple Express server with PlayFab integration",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "nodemon --exec ts-node src/server.ts",
        "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/server.ts"
    },
    "dependencies": {
        "express": "^4.18.2",
        "axios": "^1.6.0",
        "dotenv": "^16.3.1",
        "@imtbl/sdk": "2.4.10-alpha.3",
        "ethers": "^6.13.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.0",
        "nodemon": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.0"
    }
}